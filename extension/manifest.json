{
  "manifest_version": 3,
  "name": "ゆっくりボイス変換",
  "version": "1.0.0",
  "description": "ブラウザで再生される「ゆっくりボイス」をリアルタイムで自然な音声に変換します",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "ws://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ゆっくりボイス変換"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
